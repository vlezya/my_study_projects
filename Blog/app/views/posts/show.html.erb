
<div class="container">
  <article class="card mt-3">
    <div class="card-body mb-4 alert alert-info" role="alert">
      <h2><%= @post.title %></h2>

      <section class="card-text">
        <small><%= @post.created_at %></small>
        <div class="my-2">
          <%= sanitize @post.body %>
        </div>
      </section>
      <%= link_to 'All posts', posts_path, class: 'btn btn-warning' %>
      <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-warning' %>
      <%= link_to 'Delete', post_path(@post), class: 'btn btn-warning',
                  data: {method: :delete, confirm: 'Are you sure?'} %>
    </div>

  </article>

  <%= render 'comments/form' %>

  <h2 class="mt-3">All comments:</h2>

  <%= render partial: 'comments/comment', collection: @comments,
             as: :comment, locals: {post: @post} %>
</div>

